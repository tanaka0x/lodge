<h3>New hook: Slack Incoming Webhook</h3>

<%= form_for @hook do |f| %>
  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: ["form-control"] %>
  </div>

  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_field :text, class: ["form-control"] %>
  </div>

  <div class="form-group">
    <%= f.label :channel %><br>
    <%= f.text_field :channel, class: ["form-control"] %>
  </div>
  <%= f.submit class: ["btn", "btn-success"] %>
<% end %>

